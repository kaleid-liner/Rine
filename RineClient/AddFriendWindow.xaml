<Window x:Class="RineClient.AddFriendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RineClient"
        mc:Ignorable="d"
        Title="Rine" Height="150" Width="180" ResizeMode="NoResize">
    <Grid>
        <Canvas Background="AliceBlue">
            <Label Canvas.Left="20" Canvas.Top="30" Content="Rine号" Foreground="Gray"/>
            <TextBox x:Name="RineIDBox" Canvas.Left="80" Canvas.Top="35" Width="70"/>
            <Button Canvas.Left="20" Canvas.Bottom="20" Content="确认" Padding="10, 0" Style="{StaticResource ButtonStyle}" FontSize="15"
                    Command="{Binding VerifyAddCommand}" CommandParameter="{Binding ElementName=RineIDBox, Path=Text}" Click="VerifyButton_Click"/>
            <Button Canvas.Left="100" Canvas.Bottom="20" Content="取消" Padding="10, 0" Style="{StaticResource ButtonStyle}" FontSize="15" Click="CancelButton_Click"/>
        </Canvas>
        
    </Grid>
</Window>
